%p
  - @gallery.images.each do |gallery|
    = gallery.title
    %br/
    .image_box
      = link_to ( image_tag gallery.image, :width => 100, :height => 100), '#' if gallery.image?
          
  - if current_user
    .admin_box
      = link_to 'Rediger', edit_gallery_path(@gallery)
      |
      = link_to 'Tilbage', galleries_path
