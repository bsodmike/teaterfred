%h3 Galleri
%table
  - @galleries.each do |gallery|
    %tr
      %td
        %h4= link_to gallery.name, gallery
        = gallery.created_at
 
    %tr
      - gallery.images.each do |image|
        %td= image_tag image.image, :width => 100, :height => 100, :class => "image_box"

    - if current_user
      %td= link_to 'Show', gallery
      %td= link_to 'Edit', edit_gallery_path(gallery)
      %td= link_to 'Destroy', gallery, confirm: 'Are you sure?', method: :delete
      %br/
      = link_to 'New Gallery', new_gallery_path

  