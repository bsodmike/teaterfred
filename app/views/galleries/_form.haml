= form_for(@gallery) do |f|
  - if @gallery.errors.any?
    #error_explanation
      %h2
        = pluralize(@gallery.errors.count, "error")
        prohibited this gallery from being saved:
      %ul
        - @gallery.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :navn
    %br/
    = f.text_field :name
  .field
    = f.label :sted
    %br/
    = f.text_field :place
  .actions
    = f.submit 'Opret'