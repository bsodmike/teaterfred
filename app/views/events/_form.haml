= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :titel
    %br/
    = f.text_field :title
  .field
    = f.label :oprettet_d.
    %br/
    = f.text_field :published_on
  .actions
    = f.submit 'Gem'