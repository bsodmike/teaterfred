/- key = Rails.application.config.session_options[:key]

= form_for @image, :html => { :class => "upload", :multipart => true} do |f|
  %table
    %tr
      %td= f.label :titel
      %td= f.text_field :title
    %tr
      %td= f.label :galleri
      %td= f.select(:gallery_id, @gallery.map { |g| [g.title, g.id]}) # "maps" the @gallery instance variable, making it available
      %td
        %small Hvis listen er blank, sÃ¥ er der ingen gallerier oprettet. Opret derfor et galleri.
    %tr
      %td= f.label :billede
      %td= f.file_field :image, :rel => images_path(@image)
    %tr
      %td

      
    %tr
      %td
      %td
        = f.submit 'Opret'


= #plupload(@image, :create, options={:plupload_container=>'uploader'})
%div{:id => "uploader", :name => "uploader", :style => "width: 100%;"}
