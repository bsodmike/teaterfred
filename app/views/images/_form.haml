= form_for @image, :html => {:multipart => true} do |f|
  - if @image.errors.any?
    #error_explanation
      %h2
        = pluralize(@image.errors.count, "error")
        prohibited this image from being saved:
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :gallery_id
    %br/
    %select
      - @gallery.each do |gallery|
        %option{:value => gallery.id}= gallery.name
  .field
    = f.label :image
    %br/
    = f.file_field :image

  .actions
    = f.submit