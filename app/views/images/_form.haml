    %tr
      %td= f.label :billede
      %td=  # f.file_field :image, :rel => images_path(@image)
    %tr
      %td= f.file_field :image, :id => 'image'
      
    %tr
      %td
      %td
        = f.submit 'Opret'


  %div
    #filelist
    %br/
