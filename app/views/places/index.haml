%h1 Listing places
%table
  %tr
    %th Name
    %th Address
    %th Phone
    %th Email
    %th Link
    %th
    %th
    %th
  - @places.each do |place|
    %tr
      %td= place.name
      %td= place.address
      %td= place.phone
      %td= place.email
      %td= place.link
      - if current_user
        %td= link_to 'Show', place
        %td= link_to 'Edit', edit_place_path(place)
        %td= link_to 'Destroy', place, confirm: 'Are you sure?', method: :delete
%br/
- if current_user
  = link_to 'New Place', new_place_path