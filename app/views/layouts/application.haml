!!!
%html
	%head
	%title Teaterforeningen Fredensborg Kommune
	= stylesheet_link_tag "application"
	= javascript_include_tag "application"
	= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js'
	= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js'
	= javascript_include_tag 'jquery.lightbox-0.5.min.js'
	= javascript_include_tag 'fullcalendar.js'
	= javascript_include_tag 'main.js'
	= javascript_include_tag 'jquery.qtip.min.js'
	= javascript_include_tag 'jquery.uploadify.v2.1.4.min.js'
	= javascript_include_tag 'swfobject.js'
	= javascript_include_tag 'ckeditor/ckeditor.js'

	= csrf_meta_tags

	%body

		.container

			#header
				= render 'layouts/header'

			%section
				#core
					#menu
						= render 'layouts/menu'
						
					#side_content
						= render 'layouts/side_content'

					#main_content
						.spacer{:style => 'float:left' }
							= image_tag 'core/spacer.png'
						.spacer{:style => 'float:right' }
							= image_tag 'core/spacer.png'
						
						- if current_page?('/')
							%br/
						- else
							.link{:style => 'color: grey;padding-top: 10px;padding-left:20px;'}
								= link_to 'Tilbage', request.headers['HTTP_REFERER']
							%br/
						
						- flash.each do |key, value|
							.flash{:id => key} 
								= value
						
						#content_wrapper		
							= yield
		#footer
			= render 'layouts/footer'
			= yield :scripts